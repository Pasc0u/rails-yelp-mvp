<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
    </li>
    <li class="list-group-item">
      Rating: <%= review.rating %>/5
    </li>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>

</div>
